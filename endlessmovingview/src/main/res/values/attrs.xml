<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="EndlessMovingView">
        <attr name="stopWhenLoseFocus" format="boolean"/>
        <attr name="autoStart" format="boolean"/>

        <attr name="movingDir" format="enum">
            <enum name="left" value="0"/>
            <enum name="up" value="1"/>
            <enum name="right" value="2"/>
            <enum name="down" value="3"/>
        </attr>

        <!-- moving speed pixels/frame, in 60 fps -->
        <attr name="movingSpeed" format="integer"/>

        <!-- used for EndlessMovingBitmapView -->
        <attr name="singlePeriodBitmap" format="reference"/>

        <!-- used for EndlessMovingPathView -->
        <attr name="paintColor" format="color"/>
        <attr name="paintStyle" format="enum">
            <enum name="fill" value="0"/>
            <enum name="stroke" value="1"/>
            <enum name="fill_and_stroke" value="2"/>
        </attr>
    </declare-styleable>
</resources>